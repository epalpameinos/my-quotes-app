    <link rel="stylesheet" href="/css/style.css" />
    <title>Inspirational Quotes</title>
</head>
<body>

    <div id="wrapper">

        <header>
            <h1>My Inspirational Quotes</h1>
        </header>
        
        <main>
            <div class="inner">
                <header>
                    <h1></h1>
                    <p></p>
                </header>
                <section class="tiles">
                    <% quotes.forEach( el => { %>
                        <article class="<%= el.isOrange === true ? 'orange' : 'green' %>" data-id="<%= el._id%>">
                            <h3><%= el.author %></h3>
                            <h4><%= el.quote %></h4>
                            <span class="del btn btn-danger">Delete the Quote..</span>
                        </article>
                    <% }) %>

